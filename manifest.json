{
    "manifest_version": 2,
    "name": "Get Shopify URL",
    "description": "Quickly get the Shopify.shop URL and Shopify.theme information.",
    "version": "1.0.0",
    "icons": { "128": "icon_128.png" },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["inject.js"],
          "all_frames": true
        }
      ],
      "web_accessible_resources": [
        "content.js"
      ]
  }