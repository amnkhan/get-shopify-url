{
    "manifest_version": 2,
    "name": "Get Shopify URL",
    "description": "Shows Shopify shop url and theme and help to copy them",
    "version": "0.0.1",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "permissions":[
        "tabs",
        "activeTab",
        "storage"
    ],
    "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Get Shopify URL",
    "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "inject.js"
    ]
}